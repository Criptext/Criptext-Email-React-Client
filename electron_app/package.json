{
  "name": "criptext",
  "version": "0.14.7",
  "author": {
    "name": "Criptext Inc",
    "email": "support@criptext.com",
    "url": "https://criptext.com"
  },
  "homepage": "https://criptext.com",
  "private": true,
  "productName": "Criptext",
  "main": "./electron-starter.js",
  "description": "Encrypted email built on privacy",
  "repository": {
    "type": "git",
    "url": "https://github.com/Criptext/Criptext-Email-React-Client.git"
  },
  "scripts": {
    "electron": "electron .",
    "set-env": "NODE_ENV=development MAILBOX_URL=http://localhost:3000 DIALOG_URL=http://localhost:3006 LOGIN_URL=http://localhost:3005 LOADING_URL=http://localhost:3003 COMPOSER_URL=http://localhost:3004",
    "start": "npm run set-env electron .",
    "postinstall": "install-app-deps",
    "test": "criptext-js-tools test",
    "integration": "NODE_ENV=test criptext-js-tools integration",
    "lint": "criptext-js-tools lint",
    "clear-build": "sh ./installerResources/clearBuild.sh",
    "package": "sh ./installerResources/converge_builds.sh",
    "release": "sh ./installerResources/make_installer.sh"
  },
  "criptextInstallerType": "<LINUX|MACOS|WINDOWS>-<STORE|INSTALLER>",
  "build": {
    "appId": "com.criptext.criptextmail",
    "buildVersion": "1",
    "mac": {
      "target": [
        "mas",
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "identity": "Criptext Inc.",
      "provisioningProfile": "build/Criptext_Mail_Distribution.provisionprofile",
      "type": "distribution",
      "publish": [
        {
          "provider": "generic",
          "url": "https://cdn.criptext.com/Criptext-Email-Desktop/mac"
        }
      ]
    },
    "mas": {
      "category": "public.app-category.productivity",
      "identity": "Criptext Inc.",
      "entitlements": "build/entitlements.mac.plist",
      "provisioningProfile": "build/Criptext_Mail_Distribution.provisionprofile",
      "type": "distribution"
    },
    "pkg": {
      "identity": "Criptext Inc.",
      "installLocation": "/Applications"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/volume.icns",
      "title": "${productName}",
      "contents": [
        {
          "x": 145,
          "y": 195
        },
        {
          "x": 398,
          "y": 195,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.icns",
      "category": "Network",
      "artifactName": "${productName}-${version}.${ext}",
      "desktop": {
        "Name": "Criptext",
        "Comment": "Encrypted email built on privacy",
        "Categories": "Network"
      },
      "publish": [
        {
          "provider": "generic",
          "url": "https://cdn.criptext.com/Criptext-Email-Desktop/linux"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "appx"
      ],
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "generic",
          "url": "https://cdn.criptext.com/Criptext-Email-Desktop/windows"
        }
      ],
      "certificateSubjectName": "Criptext Inc"
    },
    "nsis": {
      "oneClick": true,
      "menuCategory": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-${version}.${ext}"
    },
    "appx": {
      "applicationId": "com.criptext.emailclient",
      "backgroundColor": "#373a45",
      "displayName": "Criptext",
      "identityName": "CriptextInc.Criptext",
      "publisher": "MyDevID",
      "publisherDisplayName": "Criptext Inc",
      "languages": [
        "en-US"
      ]
    }
  },
  "devDependencies": {
    "criptext-js-tools": "0.5.0",
    "electron": "^1.7.10",
    "electron-builder": "^20.18.0"
  },
  "dependencies": {
    "@criptext/api": "^0.14.15",
    "@criptext/data-transfer-client": "^0.1.1",
    "@criptext/electron-better-ipc": "^0.1.2-rc5",
    "@criptext/news-api-client": "^1.0.1",
    "electron-context-menu": "^0.10.1",
    "electron-updater": "^3.0.3",
    "electron-window-state": "^4.1.1",
    "getos": "^3.1.1",
    "knex": "^0.14.2",
    "line-by-line": "^0.1.6",
    "moment": "^2.22.2",
    "node-notifier": "^5.2.1",
    "os-locale": "^3.0.1",
    "sqlite3": "^4.0.2",
    "websocket": "^1.0.25"
  }
}
